@model PaymentsMvc.Models.Payment

@{
    ViewData["Title"] = "UpdatePayement";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h1>Update Payement</h1>

<h4>Payment</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-controller="Payment"  method="post" action="UpdatePaymentAction">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label class="control-label">Payment Name</label>
                <input asp-for="@Model.PaymentName"  name="@Html.NameFor(model => model.PaymentName)" value="@Model.PaymentName" class="form-control"  />
                <input hidden asp-for="@Model.PaymentID" name="@Html.NameFor(model => model.PaymentID)" value="@Model.PaymentID" />
                <span asp-validation-for="PaymentName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  class="control-label">Amount</label>
                <input asp-for="@Model.Amount" class="form-control" name="@Html.NameFor(model => model.Amount)" value="@Model.Amount"  type="number" />
                <span asp-validation-for="Amount"  class="text-danger"></span>
            </div>
            <div class="form-group">
                <label class="control-label">Date</label>
                @Html.TextBoxFor(model => model.Date, new { 
    @class = "form-control", 
    type = "date" ,
    @value = Model.Date
})
                @*<input asp-for="@Model.Date" class="form-control" type="date" asp-format="{0:yyyy-MM-dd}" name="@Html.NameFor(model => model.Date)" @Html.DisplayFor(m => m.Date) value="@Model.Date" />*@
                <span asp-validation-for="Date" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Update" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
